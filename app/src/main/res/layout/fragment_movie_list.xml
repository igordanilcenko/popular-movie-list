<?xml version="1.0" encoding="utf-8"?>
<com.ihardanilchanka.sampleapp.presentation.misc.StateLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/movie_list_state_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/movie_list_swipe_to_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/movie_list_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="LinearLayoutManager"
                tools:context=".presentation.movielist.MovieListFragment"
                tools:listitem="@layout/item_movie_list"
                />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</com.ihardanilchanka.sampleapp.presentation.misc.StateLayout>