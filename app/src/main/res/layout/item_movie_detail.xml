<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="?colorSurface"
        android:elevation="@dimen/global_card_elevation"
        >

    <TextView
            android:id="@+id/movie_detail_year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/global_margin_m"
            android:layout_marginTop="@dimen/global_margin_m"
            android:layout_marginEnd="@dimen/global_margin_m"
            android:textAppearance="?textAppearanceHeadline5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="2007"
            />

    <TextView
            android:id="@+id/movie_detail_genres"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/global_margin_m"
            android:layout_marginEnd="@dimen/global_margin_m"
            android:textAppearance="?textAppearanceSubtitle1"
            android:textColor="?android:textColorSecondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/movie_detail_year"
            tools:text="horror, comedy, thriller"
            />

    <RatingBar
            android:id="@+id/movie_detail_rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/global_margin_m"
            android:layout_marginTop="@dimen/global_margin_s"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="0.25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/movie_detail_genres"
            tools:rating="3.7"
            />

    <TextView
            android:id="@+id/movie_detail_rating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/global_margin_m"
            android:textAppearance="?textAppearanceHeadline3"
            app:layout_constraintBottom_toBottomOf="@+id/movie_detail_rating_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/movie_detail_rating_bar"
            tools:text="6.66"
            />

    <TextView
            android:id="@+id/movie_detail_overview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/global_margin_m"
            android:layout_marginTop="@dimen/global_margin_m"
            android:layout_marginEnd="@dimen/global_margin_m"
            android:layout_marginBottom="@dimen/global_margin_m"
            android:textAppearance="?textAppearanceBody2"
            android:textColor="?android:textColorSecondary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/movie_detail_rating"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus sagittis quis elit quis egestas. Mauris at urna eu enim scelerisque imperdiet. Orci varius natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus. Maecenas turpis augue, bibendum vel lacinia eget, ultricies pellentesque mauris. Donec tristique urna et porttitor pharetra. "
            />

</androidx.constraintlayout.widget.ConstraintLayout>